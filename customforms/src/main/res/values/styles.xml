<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="box_design">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/grey5</item>
    </style>

    <style name="text_value">
        <item name="android:textColor">@color/grey3</item>
    </style>

    <style name="input_text_value">
        <item name="android:textColor">@color/grey4</item>
        <item name="android:textColorHint">@color/grey2</item>
    </style>

    <style name="label_btn">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="checkbox">
        <item name="android:textColor">@color/grey3</item>
        <item name="android:buttonTint">@color/grey3</item> <!-- for check state -->
    </style>
</resources>